@import 'core.import'


select.c-select
  background rgba(white, 0.8)
  border solid 1px rgba(black, 0.3)
  outline none
  line-height normal
  padding-left 6px
  padding-right 25px
  height 30px
  color darken(white, 70%)

  font-family $SANS
  font-size 13px
  font-weight normal

  &:focus, &:active
    border-color $LINK_BLUE

  &.c-disabled
    opacity 0.3
