@import 'core.import'
@import 'textbox.import'


.c-raw-textbox
  position relative
  box-sizing border-box
  padding 0px

  textarea, input[type='text']
    box-sizing border-box
    margin 0
    border none
    background transparent
    width 100%
    height 100%
    outline none
    resize none
    box-shadow none
    color darken(white, 65%)
    font-weight 400

  textarea
    overflow hidden
    overflow-y auto

  &.c-size-1
    textarea, input[type='text']
      font-size 14px
      line-height normal
      padding 5px 8px

  &.c-size-2
    textarea, input[type='text']
      font-size 18px
      line-height normal
      padding 12px


  // Enabled / Can-Edit States ----------------------------------------


  &.c-disabled, &.c-cannot-edit
    textarea, input[type='text']
      cursor default

  &.c-disabled
    opacity 0.3

  &.c-border
    &.c-can-edit
      bg-textbox()
    &.c-cannot-edit
      border solid 1px transparent


